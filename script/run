run() {
  cd ./packages/asset/ && ./script/$1.sh && cd ../../ && \
  cd ./packages/core/ && ./script/$1.sh && cd ../../ && \
  cd ./packages/cli/ && ./script/$1.sh && cd ../../;
}

run_each() {
  cd ./packages/asset/;
  ./script/$1.sh;
  cd ../../;

  cd ./packages/core/;
  ./script/$1.sh;
  cd ../../;

  cd ./packages/cli/;
  ./script/$1.sh;
  cd ../../;
}
