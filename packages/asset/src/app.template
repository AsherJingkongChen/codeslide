<!DOCTYPE HTML>
<html class="hljs">
<head>
  <meta
    name="viewport"
    charset="utf-8"
    content="width=device-width, initial-scale=1, user-scalable=no">
  <style>
{%_ for (const style of it.styles) { %}
{%~ style %}
{%_ } %}
  </style>
</head>
<body class="hljs">
  <div id="slides">
    <div id="layout" hidden>
      {%_ ~ it.layout _%}
    </div>
    <div id="length" hidden>
      {%_ ~ it.slides.length _%}
    </div>

{%_ for (const [index, slide] of it.slides.entries()) { %}
    <div id="_{%~ index %}" class="slide" hidden>
      <div class="title
  {%_ if (index !== 0 && ! it.layout.startsWith('slide')) { %}
        {%_ ~ ' bordered' %}
  {%_ } _%}
      ">
  {%_ if (slide.title) { _%}
        <pre>{%_ _%}
          <code class="language-plaintext hljs">
            {%_ = slide.title _%}
          </code>{%_ _%}
        </pre>
  {%_ } _%}
      </div>
      <div class="code">
  {%_ if (slide.code) { _%}
        <pre>{%_ _%}
          <code class="
    {%_ if (slide.lang) { %}
            {%_ ~ `language-${slide.lang}` %}
    {%_ } _%}
          ">
            {%_ = slide.code _%}
          </code><br>{%_ _%}
        </pre>
  {%_ } _%}
      </div>
    </div>
{%_ } %}
  </div>
  <script>
{%~ it.script %}
  </script>
</body>
</html>
