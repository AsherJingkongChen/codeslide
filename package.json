{
  "name": "codeslide-cli",
  "version": "0.7.7",
  "description": "A simple code slideshow command line interface",
  "scripts": {
    "build": "npm run build:web && npm run build:cli",
    "build:cli": "cargo build -r",
    "build:web": "webpack --mode production && cp ./dist/index.html ./templates/",
    "clean": "npm run clean:cli & npm run clean:web & npm run clean:nm & npm run clean:ex",
    "clean:cli": "rm -r ./target",
    "clean:web": "rm -r ./dist",
    "clean:nm": "rm -r ./node_modules",
    "clean:ex": "rm ./example/**/index.html",
    "dev": "npm run dev:web && npm run dev:cli",
    "dev:cli": "cargo build",
    "dev:web": "webpack --mode development && cp ./dist/index.html ./templates/",
    "start": "npm run build && npm run example",
    "example": "./script/example.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AsherJingkongChen/codeslide-cli"
  },
  "keywords": [
    "slideshow",
    "cli",
    "command-line-tool",
    "slide"
  ],
  "author": "AsherJingkongChen",
  "license": "MIT",
  "type": "module",
  "engines": {
    "pnpm": ">=7"
  },
  "files": [
    "pre-install.js",
    "start.js",
    "uninstall.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^18.15.11",
    "copy-webpack-plugin": "^11.0.0",
    "highlight.js": "^11.7.0",
    "html-minimizer-webpack-plugin": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-visualizer-plugin2": "^1.0.0"
  }
}
