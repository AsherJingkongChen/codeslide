{
  "name": "codeslide-cli",
  "version": "0.6.8",
  "description": "A simple code slideshow command line interface",
  "scripts": {
    "build": "npm run build:web && npm run build:cli",
    "build:cli": "cargo build -r",
    "build:web": "webpack --mode production -c web.webpack.config.js && cp ./dist/index.html ./templates/",
    "clean": "npm run clean:cli & npm run clean:web & npm run clean:nm",
    "clean:cli": "rm -r ./target",
    "clean:web": "rm -r ./dist",
    "clean:nm": "rm -r ./node_modules",
    "dev:cli": "cargo run",
    "dev:web": "webpack s --mode development -c web.webpack.config.js",
    "start": "cargo run -r",
    "publish": "git checkout deploy && git merge v0 && rust-to-npm deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AsherJingkongChen/codeslide-cli"
  },
  "keywords": ["slideshow", "cli", "command-line-tool", "slide"],
  "author": "AsherJingkongChen",
  "license": "MIT",
  "type": "module",
  "engines": {
    "pnpm": ">=7"
  },
  "files": [
    "pre-install.js",
    "start.js",
    "uninstall.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@codemirror/lang-javascript": "^6.1.5",
    "@codemirror/language": "^6.6.0",
    "@codemirror/state": "^6.2.0",
    "@codemirror/theme-one-dark": "^6.1.1",
    "@codemirror/view": "^6.9.3",
    "babel-loader": "^9.1.2",
    "babel-preset-solid": "^1.7.2",
    "codemirror": "^6.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "fela": "^12.2.1",
    "fela-dom": "^12.2.1",
    "html-webpack-plugin": "^5.5.0",
    "solid-codemirror": "^2.2.3",
    "solid-js": "^1.7.2",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2",
    "webpack-visualizer-plugin2": "^1.0.0"
  }
}
